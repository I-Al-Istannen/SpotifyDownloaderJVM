<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="me.ialistannen.spotifydownloaderjvm.gui.main.MainScreenController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
  <center>
    <GridPane BorderPane.alignment="CENTER">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
      </rowConstraints>
      <children>
        <TextField fx:id="playlistUrl" promptText="Playlist URL" style="-fx-font-size: 1.5em;"
          GridPane.columnSpan="2147483647">
          <GridPane.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
          </GridPane.margin>
        </TextField>
        <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
          <children>
            <Label style="-fx-font-weight: bold;" text="Parallelism"/>
            <Slider fx:id="parallelismSlider" blockIncrement="1.0" majorTickUnit="1.0" max="4.0"
              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" min="1.0"
              minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true"
              value="1.0">
              <VBox.margin>
                <Insets left="20.0" right="20.0" top="10.0"/>
              </VBox.margin>
            </Slider>
          </children>
        </VBox>
        <HBox alignment="CENTER" GridPane.columnSpan="2147483647" GridPane.rowIndex="3">
          <children>
            <Button fx:id="downloadButton" defaultButton="true"
              onAction="#onDownload" style="-fx-font-size: 1.5em;" text="Go!">
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
              </HBox.margin>
            </Button>
          </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
          <children>
            <Label fx:id="outputPath" text="Pick an output path">
              <padding>
                <Insets right="10.0"/>
              </padding>
            </Label>
            <Button onAction="#onPickOutputPath" text="…"/>
          </children>
          <GridPane.margin>
            <Insets left="10.0" right="10.0"/>
          </GridPane.margin>
        </HBox>
        <VBox alignment="TOP_CENTER" GridPane.rowIndex="1">
          <children>
            <Label style="-fx-font-weight: bold;" text="Spotify credentials">
              <VBox.margin>
                <Insets bottom="10.0"/>
              </VBox.margin>
            </Label>
            <TextField fx:id="clientId" promptText="Client ID">
              <VBox.margin>
                <Insets bottom="10.0" top="5.0"/>
              </VBox.margin>
            </TextField>
            <TextField fx:id="clientSecret" promptText="Client Secret"/>
          </children>
          <GridPane.margin>
            <Insets left="10.0" right="10.0" top="10.0"/>
          </GridPane.margin>
        </VBox>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES"
          GridPane.rowIndex="1">
          <children>
            <Label style="-fx-font-weight: bold;" text="FFMPEG Settings">
              <padding>
                <Insets bottom="10.0"/>
              </padding>
            </Label>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308">
              <VBox.margin>
                <Insets bottom="10.0" top="5.0"/>
              </VBox.margin>
              <children>
                <TextField fx:id="ffmpegPath"
                  maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  promptText="FFMPEG path" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                    <Insets right="10.0"/>
                  </HBox.margin>
                </TextField>
                <Button onAction="#onPickFfmpegPath" text="…"/>
              </children>
            </HBox>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308">
              <children>
                <TextField fx:id="ffprobePath" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308" promptText="FFPROBE path" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                    <Insets right="10.0"/>
                  </HBox.margin>
                </TextField>
                <Button onAction="#onPickFfprobePath" text="…"/>
              </children>
            </HBox>
          </children>
          <GridPane.margin>
            <Insets bottom="30.0" left="10.0" right="10.0" top="10.0"/>
          </GridPane.margin>
        </VBox>
      </children>
    </GridPane>
  </center>
</BorderPane>
