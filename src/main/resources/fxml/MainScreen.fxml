<?import javafx.scene.layout.VBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefWidth="600.0" styleClass="rootPane" xmlns="http://javafx.com/javafx/8.0.162-ea"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="me.ialistannen.spotifydownloaderjvm.gui.main.MainScreenController">
  <center>
    <GridPane styleClass="rootPane" BorderPane.alignment="CENTER">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
      </rowConstraints>
      <children>
        <TextField id="playlistUrl" fx:id="playlistUrl" promptText="Playlist url" styleClass="hm"
          GridPane.columnSpan="2147483647">
          <GridPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
          </GridPane.margin>
        </TextField>
        <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
          <children>
            <Label text="Parallelism" textFill="WHITE">
              <styleClass>
                <String fx:value="simpleLabel"/>
                <String fx:value="subHeading"/>
              </styleClass>
            </Label>
            <Slider fx:id="parallelismSlider" blockIncrement="1.0" majorTickUnit="1.0" max="4.0"
              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" min="1.0"
              minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true"
              value="1.0">
              <VBox.margin>
                <Insets left="20.0" right="20.0" top="10.0"/>
              </VBox.margin>
            </Slider>
          </children>
        </VBox>
        <HBox alignment="CENTER" GridPane.columnSpan="2147483647" GridPane.rowIndex="3">
          <children>
            <Button id="goButton" fx:id="downloadButton"
              onAction="#onDownload" text="Go!">
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
              </HBox.margin>
            </Button>
          </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
          <children>
            <Label fx:id="outputPath" styleClass="simpleLabel" text="Pick an output path">
              <padding>
                <Insets right="10.0"/>
              </padding>
            </Label>
            <Button onAction="#onPickOutputPath" styleClass="simpleButton" text="…"/>
          </children>
          <GridPane.margin>
            <Insets left="10.0" right="10.0"/>
          </GridPane.margin>
        </HBox>
        <VBox alignment="TOP_CENTER" GridPane.rowIndex="1">
          <children>
            <Label text="Spotify credentials">
              <VBox.margin>
                <Insets bottom="20.0"/>
              </VBox.margin>
              <styleClass>
                <String fx:value="simpleLabel"/>
                <String fx:value="subHeading"/>
              </styleClass>
            </Label>
            <TextField fx:id="clientId" promptText="Client ID"
              styleClass="simpleTextField">
              <VBox.margin>
                <Insets bottom="20.0" top="10.0"/>
              </VBox.margin>
            </TextField>
            <TextField fx:id="clientSecret" promptText="Client Secret"
              styleClass="simpleTextField"/>
          </children>
          <GridPane.margin>
            <Insets left="20.0" right="20.0" top="10.0"/>
          </GridPane.margin>
        </VBox>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES"
          GridPane.rowIndex="1">
          <children>
            <Label text="FFMPEG Settings">
              <styleClass>
                <String fx:value="simpleLabel"/>
                <String fx:value="subHeading"/>
              </styleClass>
              <padding>
                <Insets bottom="20.0"/>
              </padding>
            </Label>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308">
              <VBox.margin>
                <Insets bottom="20.0" top="10.0"/>
              </VBox.margin>
              <children>
                <TextField fx:id="ffmpegPath"
                  maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  promptText="FFMPEG path" styleClass="simpleTextField" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                    <Insets right="10.0"/>
                  </HBox.margin>
                </TextField>
                <Button onAction="#onPickFfmpegPath" text="…"/>
              </children>
            </HBox>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308">
              <VBox.margin>
                <Insets top="10.0"/>
              </VBox.margin>
              <children>
                <TextField fx:id="ffprobePath" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308" promptText="FFPROBE path"
                  styleClass="simpleTextField" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                    <Insets right="10.0"/>
                  </HBox.margin>
                </TextField>
                <Button onAction="#onPickFfprobePath" text="…"/>
              </children>
            </HBox>
          </children>
          <GridPane.margin>
            <Insets bottom="59.0" left="20.0" right="20.0" top="10.0"/>
          </GridPane.margin>
        </VBox>
      </children>
    </GridPane>
  </center>
  <stylesheets>
    <URL value="@../css/Base.css"/>
    <URL value="@../css/MainScreen.css"/>
  </stylesheets>
</BorderPane>
